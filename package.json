{
  "name": "@heroku/oauth-provider-adapters-for-mcp",
  "version": "0.0.0",
  "description": "An OAuth adapter framework for developers that can add OAuth providers to remote MCP servers with minimal friction.",
  "type": "module",
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "scripts": {
    "build:cjs": "rm -rf dist/cjs && tsc -p tsconfig.cjs.json && mkdir -p dist/cjs && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "build:esm": "rm -rf dist/esm && tsc -p tsconfig.esm.json",
    "build": "pnpm run build:cjs && pnpm run build:esm",
    "test": "MCP_OAUTH_LOG_LEVEL=silent LOG_LEVEL=silent c8 mocha --require ./scripts/test-setup.mjs --forbid-only \"dist/cjs/**/*.test.js\"",
    "prepare": "husky",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "prettier": "prettier . --write --config ./.prettier.mjs",
    "format": "pnpm run prettier && pnpm run lint:fix",
    "pretest": "pnpm run build:cjs && pnpm run build:esm && pnpm run type-check",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "lint-staged": "npx lint-staged",
    "check": "pnpm run format && pnpm run type-check && pnpm test",
    "ci": "pnpm run lint && pnpm run type-check && pnpm test"
  },
  "author": "Heroku",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heroku/oauth-provider-adapters-for-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/heroku/oauth-provider-adapters-for-mcp/issues"
  },
  "homepage": "https://github.com/heroku/oauth-provider-adapters-for-mcp#readme",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.3.0",
    "openid-client": "^6.8.1",
    "tslib": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/chai": "^5.2.2",
    "@types/http-errors": "^2.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.7.0",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "c8": "^10.1.3",
    "chai": "^6.2.0",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org/"
  }
}
