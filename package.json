{
  "name": "mcp-oauth-provider-adapters",
  "version": "0.0.1",
  "description": "An OAuth adapter framework for developers that can add OAuth providers to remote MCP servers with minimal friction.",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "scripts": {
    "build:cjs": "rm -rf dist/cjs && tsc -p tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "build:esm": "rm -rf dist/esm && tsc -p tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "test": "npm run build && npm run type-check && c8 mocha --forbid-only \"dist/cjs/**/*.test.js\"",
    "prepare": "husky",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "prettier": "prettier . --write --config ./.prettier.mjs",
    "format": "npm run prettier && npm run lint:fix",
    "pretest": "npm run build:cjs && npm run build:esm",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "lint-staged": "npx lint-staged"
  },
  "author": "Heroku",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heroku/mcp-oauth-provider-adapters.git"
  },
  "bugs": {
    "url": "https://github.com/heroku/mcp-oauth-provider-adapters/issues"
  },
  "homepage": "https://github.com/heroku/mcp-oauth-provider-adapters#readme",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "openid-client": "^6.7.1",
    "tslib": "^2.6.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/chai": "^5.2.2",
    "@types/http-errors": "^2.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.1",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "c8": "^10.1.3",
    "chai": "^6.0.1",
    "eslint": "^9.35.0",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "mocha": "^11.7.2",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "private"
  }
}
