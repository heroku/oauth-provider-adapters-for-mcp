{
  "name": "mcp-oauth-provider-adapters",
  "version": "0.0.1",
  "description": "An OAuth adapter framework for developers that can add OAuth providers to remote MCP servers with minimal friction.",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "types": "./lib/esm/index.d.ts"
    }
  },
"scripts": {
    "build:cjs": "tsc --module commonjs --outDir lib/cjs --target esnext",
    "build:esm": "tsc --module esnext --outDir lib/esm --target esnext",
    "build": "eslint . --config .eslintrc --fix && prettier -w --config ./.prettier.mjs ./src/**/*.ts && (npm run build:cjs & npm run build:esm)",
    "test": "c8 mocha --forbid-only \"test/**/*.test.ts\"",
    "test:local": "c8 mocha \"${npm_config_file:-test/**/*.test.+(ts|tsx)}\""
  },
  "author": "Heroku",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heroku/mcp-oauth-provider-adapters.git"
  },
  "bugs": {
    "url": "https://github.com/heroku/mcp-oauth-provider-adapters/issues"
  },
  "homepage": "https://github.com/heroku/mcp-oauth-provider-adapters#readme",
  "files": [
    "src/",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {},
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "@types/node": "^20.11.0",
    "typescript": "^5.0.0",
    "mocha": "^10.0.0",
    "chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/chai": "^4.3.0",
    "ts-node": "^10.9.1",
    "c8": "^8.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0"
  },
  "publishConfig": {
    "access": "private"
  }
}
