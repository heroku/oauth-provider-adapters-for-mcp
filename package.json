{
  "name": "mcp-oauth-provider-adapters",
  "version": "0.0.1",
  "description": "An OAuth adapter framework for developers that can add OAuth providers to remote MCP servers with minimal friction.",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "types": "./lib/esm/index.d.ts"
    }
  },
  "scripts": {
    "build:cjs": "tsc --module commonjs --outDir lib/cjs --target esnext",
    "build:esm": "tsc --module esnext --outDir lib/esm --target esnext",
    "build": "eslint src/**/*.ts --config .eslintrc.json --fix && npm run build:cjs && npm run build:esm",
    "test": "c8 mocha --forbid-only \"test/**/*.test.ts\""
  },
  "author": "Heroku",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heroku/mcp-oauth-provider-adapters.git"
  },
  "bugs": {
    "url": "https://github.com/heroku/mcp-oauth-provider-adapters/issues"
  },
  "homepage": "https://github.com/heroku/mcp-oauth-provider-adapters#readme",
  "files": [
    "src/",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.16.0",
		"cors": "^2.8.5",
		"dotenv": "^17.2.0",
		"express": "^5.1.0",
		"express-rate-limit": "^8.0.1",
		"zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "c8": "^8.0.0",
    "chai": "^4.3.0",
    "eslint": "^8.57.0",
    "mocha": "^10.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "private"
  }
}
