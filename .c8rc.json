{
  "all": true,
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "dist/**/*",
    "src/**/*types.ts",
    "src/testUtils/**/*.test.ts"
  ],
  "reporter": ["text", "html", "lcov"],
  "reports-dir": "coverage",
  "exclude-after-remap": true,
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80
}
